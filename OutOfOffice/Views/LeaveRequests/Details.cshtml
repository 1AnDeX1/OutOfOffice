@using OutOfOffice.Application.Dto.LeaveRequests
@model LeaveRequestIndexDto

<h2>Leave Request Details</h2>

<div>
    <h4>Employee ID: @Model.EmployeeId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Absence Reason
        </dt>
        <dd class="col-sm-10">
            @Model.AbsenceReason
        </dd>

        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            Comment
        </dt>
        <dd class="col-sm-10">
            @Model.Comment
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
