@using OutOfOffice.Application.Dto.Employees
@model EmployeeDetailsDto

<h2>Employee Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ID
        </dd>

        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>

        <dt class="col-sm-2">
            Subdivision
        </dt>
        <dd class="col-sm-10">
            @Model.Subdivision
        </dd>

        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>

        <dt class="col-sm-2">
            People Partner ID
        </dt>
        <dd class="col-sm-10">
            @Model.PeoplePartnerId
        </dd>

        <dt class="col-sm-2">
            Out Of Office Balance
        </dt>
        <dd class="col-sm-10">
            @Model.OutOfOfficeBalance
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="@Model.Photo" alt="Employee Photo" />
            }
            else
            {
                <span>No photo available</span>
            }
        </dd>
    </dl>
    <a asp-action="Index">Back to List</a>
</div>
